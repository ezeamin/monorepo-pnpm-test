{
  "private": true,
  "scripts": {
    "build": "env-cmd -f ./.env.production turbo run build",
    "clean:cache": "pnpm store prune && turbo daemon clean",
    "dev": "env-cmd -f ./.env.development turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "prettier:check": "npx prettier -c .",
    "prettier:write": "npx prettier -w .",
    "prepare": "pnpm i tsx -g && tsx ./packages/config/prepare-project.ts",
    "remove:modules": "npx npkill .",
    "syncpack:check": "npx syncpack list-mismatches",
    "syncpack:fix": "npx syncpack fix-mismatches ; pnpm i",
    "syncpack:list": "npx syncpack list",
    "update:all": "ncu -u"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": "please-use-pnpm",
    "npm": "please-use-pnpm"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.8.10",
  "name": "puas-monorepo",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-angular": "^18.4.3",
    "@types/node": "^20.9.4",
    "env-cmd": "^10.1.0",
    "husky": "^8.0.3",
    "npm-check-updates": "^16.14.11",
    "prettier": "^3.1.0",
    "syncpack": "^11.2.1",
    "tsconfig": "workspace:*",
    "turbo": "latest",
    "typescript": "^5.3.2"
  }
}
