{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "prettier:check": "npx prettier -c .",
    "prettier:write": "npx prettier -w .",
    "prepare": "pnpm i tsx -g && tsx ./packages/config/prepare-project.ts",
    "update:all": "ncu -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-angular": "^17.7.0",
    "@types/node": "^20.6.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "npm-check-updates": "^16.14.2",
    "prettier": "^3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "latest",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.6.10",
  "name": "puas-monorepo"
}
