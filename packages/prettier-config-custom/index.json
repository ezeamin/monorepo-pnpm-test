{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "endOfLine": "lf",
  "importOrder": [
    "^react$",
    "^(next$|next(?!-)[^/]*/)",
    "(.|^@)\/app",
    "(.|^@)\/redux\/store(?!\/interface)",
    "(.|^@)\/redux\/hooks(?!\/interface)",
    "(.|^@)\/redux\/slices(?!\/interface)",
    "(.|^@)\/redux\/apiSlices(?!\/interface)",
    "(.|^@)\/hooks(?!\/interface)",
    "(.|^@)\/components(?!.*\/interface)",
    "((.|^@)\/(helpers|constants|utilities)(?!\/interface))|(utilities)",
    "(.|^@)\/(themes)(?!\/interface)",
    "(.|^@)\/forms(?!\/interface)",
    "(.|^@)\/adapters(?!\/interface)",
    "(.|^@)\/dti(?!\/interface)",
    "<THIRD_PARTY_MODULES>",
    "(.|^@)\/(styles|.*\/styles|(.*.styles.*))",
    "(.|^@)\/(interface|.*\/interface|(.*.types.*))"
  ],
  "importOrderSeparation": true,
  "importOrderCaseInsensitive": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
